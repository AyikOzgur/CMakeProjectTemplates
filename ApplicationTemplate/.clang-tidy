---
# Clang-Tidy configuration file
# Documentation: https://clang.llvm.org/extra/clang-tidy/

# Checks to enable (customize based on your needs)
Checks: >
  -*,
  bugprone-*,
  clang-analyzer-*,
  cppcoreguidelines-*,
  modernize-*,
  performance-*,
  portability-*,
  readability-*,
  -modernize-use-trailing-return-type,
  -readability-magic-numbers,
  -cppcoreguidelines-avoid-magic-numbers,
  -readability-identifier-length

# Treat warnings as errors (set to empty string to disable)
WarningsAsErrors: ''

# Header filter regex - analyze headers in your project only
HeaderFilterRegex: '.*'

# Format style for fixes
FormatStyle: file

# Check options
CheckOptions:
  # Naming conventions (customize to match your style)
  - key: readability-identifier-naming.ClassCase
    value: CamelCase
  - key: readability-identifier-naming.FunctionCase
    value: camelBack
  - key: readability-identifier-naming.VariableCase
    value: camelBack
  - key: readability-identifier-naming.ConstantCase
    value: UPPER_CASE
  - key: readability-identifier-naming.NamespaceCase
    value: lower_case
  
  # Function size limits
  - key: readability-function-size.LineThreshold
    value: '100'
  - key: readability-function-size.StatementThreshold
    value: '50'
  
  # Braces around statements
  - key: readability-braces-around-statements.ShortStatementLines
    value: '1'
